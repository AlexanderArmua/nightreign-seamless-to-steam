{
  "name": "nightreign-saves-seamless-to-steam",
  "version": "2.0.0",
  "description": "Helps user to automatically migrate Steam saves to SeamlessCoop or viceversa",
  "homepage": "https://github.com/AlexanderArmua/nightreign-seamless-to-steam#readme",
  "license": "ISC",
  "author": "Alexander Armua <alexanderarmua1@gmail.com>",
  "type": "module",
  "scripts": {
    "dev": "bun run src/main.ts",
    "check": "tsc --noEmit",
    "build": "bun build --compile src/main.ts --target=bun-windows-x64 --windows-icon=./public/bonfire.ico --outfile SaveManager.exe",
    "build:windows": "bun build --compile src/main.ts --target=bun-windows-x64 --windows-icon=./public/bonfire.ico --outfile SaveManager.exe",
    "build:mac": "bun build --compile src/main.ts --target=bun-darwin-arm64 --outfile SaveManager-mac",
    "build:linux": "bun build --compile src/main.ts --target=bun-linux-x64 --outfile SaveManager-linux"
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7"
  },
  "keywords": [
    "nightreign",
    "save",
    "steam",
    "seamlessCoop"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexanderArmua/nightreign-seamless-to-steam.git"
  }
}
